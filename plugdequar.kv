<RV>:
    viewclass: 'Label'

    RecycleBoxLayout:
        default_size: None, dp(40)
        default_size_hint: 1, None
        size_hint_y: None
        height: self.minimum_height
        orientation: 'vertical'

<FloatLayout>
    canvas.before:
        BorderImage:
            source: 'resources/background.png'
            pos: self.pos
            size: self.size